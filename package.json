{
  "name": "university-management-core-service",
  "version": "1.0.0",
  "description": "A Backend Boilerplate using Node, PostgreSql, Prisma, Express, TypeScript",
  "main": "src/server.ts",
  "type": "commonjs",
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only src/server.ts",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier:check": "prettier . --check || true",
    "prettier:fix": "yarn prettier . --write",
    "lint-prettier": "run-s prettier:check prettier:fix lint:check lint:fix --",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.ts": "yarn lint-prettier"
  },
  "author": "itzJunaedRayhan",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.21.1",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "http-status": "^2.0.0",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "prisma": "^5.21.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/http-status": "^1.1.2",
    "eslint": "^9.13.0",
    "globals": "^15.11.0",
    "husky": "^8.0.0",
    "prettier": "3.3.3",
    "typescript-eslint": "^8.11.0"
  }
}
